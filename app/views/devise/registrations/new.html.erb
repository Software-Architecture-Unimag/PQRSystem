<div class="container">
    <div class="row">
        <br>
        <div class="col s12 offset-m2 m8">
            <div class="card-panel">
                <center><h5>Registro</h5></center>
                <div class="row">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                     <%= devise_error_messages! %>

                    <div class="field col s12 m6">
                        <%= f.label :first_name, class: '' %><br />
                        <%= f.text_field :first_name, autofocus: true, autocomplete: "off" %>
                    </div>

                    <div class="field col s12 m6">
                        <%= f.label :last_name, class: '' %><br />
                        <%= f.text_field :last_name, autofocus: true, autocomplete: "off" %>
                    </div>

                    <div class="field col s12 m6">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>

                    <div class="field col s12 m6">
                        <%= f.label :phone_number, class: '' %><br />
                        <%= f.phone_field :phone_number, autofocus: true, autocomplete: "off" %>
                    </div>


                    <div class="field col s12 m6">
                        <%= f.label :password %>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "off" %>
                    </div>

                    <div class="field col s12 m6">
                        <%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "off" %>
                    </div>

                    <div class="field col s12">
                        <%= f.label :birthdate, class: '' %><br />
                        <%= f.text_field :birth_date, autofocus: true, autocomplete: "off", class:'datepicker' %>
                    </div>


                    <div class="actions center">
                        <%= f.submit "Registrar" %>
                    </div>
                    <% end %>
                </div>

            </div>
            <div class="card-panel center">
                Ya tienes una cuenta? <%= render "devise/shared/links" %>
            </div>

        </div>
    </div>
</div>



<script>
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
